@{
    Layout = "_Layout";
}
@* Stores the name of the current Controller the user is on and puts it in controllerName*@
@{
    var areaName = ViewContext.RouteData.Values["Area"]?.ToString() ?? "";
    var controllerName = ViewContext.RouteData.Values["Controller"]?.ToString() ?? "";
    var actionName = ViewContext.RouteData.Values["Action"]?.ToString() ?? "";
}




<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm bg-dark" data-bs-theme="dark">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="Admin" asp-controller="Home" asp-action="Index">Admin Nav</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link @(areaName == "Admin" && controllerName == "Home" && actionName == "Index" ? "active" : "")" asp-area="Admin" asp-controller="Home" asp-action="Index">Home</a>
                    </li>



                    <li class="nav-item ms-auto">
                        <a class="nav-link @(areaName == "" && controllerName=="Home" && actionName=="Index" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Index">Main Site</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>




<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>


@await RenderSectionAsync("Scripts", required: false)